<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_access_token_expire_time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="left|center_vertical"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="240sp"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:text="@string/btn_browser_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="240sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center|center_vertical"
            android:text="@string/btn_logout_text"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_access_token_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="left|center_vertical"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_access_token"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="left|center_vertical"
            android:textSize="90sp" />

        <TextView
            android:id="@+id/tv_access_token_expire_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="left|center_vertical"
            android:textSize="52sp" />

        <TextView
            android:id="@+id/tv_obtain_token_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:maxLines="1000"
            android:scrollbars="vertical"
            android:text="@string/note_obtain_access_token_hint"
            android:textSize="12sp" />

    </LinearLayout>


</ScrollView>
